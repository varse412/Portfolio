generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model myProfile {
  id          String @id @default(uuid())
  name        String
  email       String
  bio         String
  title       String
  mobile      String
  githubURL   String
  linkedInURL String
  website     String
  resumeLink  String
  resume      String
}

model project {
  id                 String         @id @default(uuid())
  projectName        String
  developmentType    String
  projectDescription String
  githubURL          String
  liveURL            String
  demoVideo          String
  picture            String
  softwareUsed       projectStack[]
}

model projectStack {
  id        Int      @id @default(autoincrement())
  name      String
  project   project? @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId String?
}

model education {
  id          String   @id @default(uuid())
  schoolName  String
  degree      String
  description String
  startDate   DateTime
  endDate     DateTime
  schoolImage String
}

model companyExperience {
  id           String   @id @default(uuid())
  companyName  String
  description  String
  position     String
  startDate    DateTime
  endDate      DateTime
  companyImage String
}

model bio {
  id    String @id @default(uuid())
  title String
  bio   String
  image String
}

model skills {
  id         String @id @default(uuid())
  stackName  String
  stackItems String
}

model myCertificate {
  id                        String @id @default(uuid())
  nameOfCertificate         String
  certificateLinkToDownload String
  imageCertificate          String
}
